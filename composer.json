{
    "name": "pleets/php-http-client-integrator",
    "description": "Integration of several HTTP Clients in a unique interface",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "PHP",
        "HTTP Client"
    ],
    "homepage": "https://pleets.org",
    "support": {
        "issues": "https://github.com/pleets/php-http-client-integrator/issues",
        "source": "https://github.com/pleets/php-http-client-integrator"
    },
    "authors": [
        {
            "name": "Dar√≠o Rivera",
            "email": "fermius.us@gmail.com"
        }
    ],
    "require": {
        "php": "7.4.*",
        "ext-json": "*",
        "pleets/php-event-dispatcher": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/http-client": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "phpunit": "phpunit --stop-on-error --stop-on-failure --testdox",
        "phpunit-xml": "phpunit --stop-on-error --stop-on-failure --coverage-clover phpunit.coverage.xml",
        "phpcs-check":  "phpcs --colors -s",
        "phpcs-fix":  "phpcbf --colors -s",
        "phpcs-auto-check": "@phpcs-check --standard=.phpcs.xml",
        "phpcs-auto-fix": "@phpcs-fix --standard=.phpcs.xml",
        "phpcs-auto-check-project": "phpcs --report=summary -p",
        "phpcs-auto-fix-project": "phpcbf --report=summary -p",
        "test": [
            "@phpcs-auto-check-project",
            "@phpunit"
        ]
    },
    "autoload": {
        "psr-4": {
            "Pleets\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
